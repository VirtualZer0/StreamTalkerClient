<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:semi="https://irihi.tech/semi"
             xmlns:conv="using:StreamTalkerClient.Converters"
             x:Class="StreamTalkerClient.App"
             RequestedThemeVariant="Dark">

    <Application.Styles>
        <semi:SemiTheme Locale="en-US" />
        <semi:DataGridSemiTheme />
        <Style Selector="Window">
            <Setter Property="FontFamily" Value="avares://StreamTalkerClient/Assets/Fonts/Roboto-Regular.ttf#Roboto,avares://StreamTalkerClient/Assets/Fonts/Roboto-Medium.ttf#Roboto,avares://StreamTalkerClient/Assets/Fonts/Roboto-Bold.ttf#Roboto" />
        </Style>
    </Application.Styles>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Lang/en.axaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Shared font family for monospace display (queue items, code, etc.) -->
            <FontFamily x:Key="MonospaceFontFamily">Consolas, Courier New, monospace</FontFamily>

            <conv:ConnectionStateToColorConverter x:Key="ConnectionStateToColorConverter" />
            <conv:BoolToColorConverter x:Key="BoolToColorConverter" />
            <conv:BoolToColorConverter x:Key="ServerStatusColorConverter"
                                       TrueBrush="LimeGreen" FalseBrush="Red" />
            <conv:ConnectionStateEqualsConverter x:Key="StateEquals" />
            <conv:InvertBoolConverter x:Key="InvertBool" />
            <conv:BoolToColorConverter x:Key="PowerButtonColorConverter"
                                       TrueBrush="Red" FalseBrush="LimeGreen" />
            <conv:BoolToStringConverter x:Key="BoolToStringConverter" />
            <conv:PlatformEqualsConverter x:Key="PlatformEquals" />
            <conv:NotificationSeverityToBrushConverter x:Key="SeverityToAccentBrush" Mode="Accent" />
            <conv:NotificationSeverityToBrushConverter x:Key="SeverityToBgBrush" Mode="Background" />

            <!-- Window control icon aliases (using Semi icons) -->
            <StaticResource x:Key="WindowMinimizeIcon" ResourceKey="SemiIconMinus" />
            <StaticResource x:Key="WindowMaximizeIcon" ResourceKey="SemiIconMaximize" />
            <StaticResource x:Key="WindowRestoreIcon" ResourceKey="SemiIconShrink" />
            <StaticResource x:Key="WindowCloseIcon" ResourceKey="SemiIconClose" />

            <!-- ═══════════════════════════════════════════════════════════ -->
            <!--  DESIGN SYSTEM TOKENS -->
            <!-- ═══════════════════════════════════════════════════════════ -->

            <!-- COLOR PALETTE -->
            <Color x:Key="ColorStateUnloaded">#606060</Color>
            <Color x:Key="ColorStateLoading">#FF8C00</Color>
            <Color x:Key="ColorStateReady">#4090FF</Color>
            <Color x:Key="ColorStateActive">#7060FF</Color>
            <Color x:Key="ColorStateError">#FF4040</Color>
            <Color x:Key="ColorStateSuccess">#00C851</Color>

            <Color x:Key="ColorBorderSubtle">#30808080</Color>
            <Color x:Key="ColorBackgroundOverlay">#20808080</Color>
            <Color x:Key="ColorHoverOverlay">#15FFFFFF</Color>
            <Color x:Key="ColorPressedOverlay">#10FFFFFF</Color>

            <!-- Convert to brushes for binding -->
            <SolidColorBrush x:Key="BrushStateUnloaded" Color="{StaticResource ColorStateUnloaded}" />
            <SolidColorBrush x:Key="BrushStateLoading" Color="{StaticResource ColorStateLoading}" />
            <SolidColorBrush x:Key="BrushStateReady" Color="{StaticResource ColorStateReady}" />
            <SolidColorBrush x:Key="BrushStateActive" Color="{StaticResource ColorStateActive}" />
            <SolidColorBrush x:Key="BrushStateError" Color="{StaticResource ColorStateError}" />
            <SolidColorBrush x:Key="BrushBorderSubtle" Color="{StaticResource ColorBorderSubtle}" />

            <!-- TYPOGRAPHY SCALE -->
            <x:Double x:Key="FontSizeSmall">11</x:Double>
            <x:Double x:Key="FontSizeBody">12</x:Double>
            <x:Double x:Key="FontSizeBodyLarge">14</x:Double>
            <x:Double x:Key="FontSizeHeading">15</x:Double>
            <x:Double x:Key="FontSizeTitle">16</x:Double>

            <!-- SPACING SCALE -->
            <x:Double x:Key="SpacingXS">4</x:Double>
            <x:Double x:Key="SpacingSM">6</x:Double>
            <x:Double x:Key="SpacingMD">8</x:Double>
            <x:Double x:Key="SpacingLG">12</x:Double>
            <x:Double x:Key="SpacingXL">16</x:Double>
            <x:Double x:Key="SpacingXXL">24</x:Double>

            <Thickness x:Key="ThicknessXS">4</Thickness>
            <Thickness x:Key="ThicknessSM">6</Thickness>
            <Thickness x:Key="ThicknessMD">8</Thickness>
            <Thickness x:Key="ThicknessLG">12</Thickness>

            <!-- ICON SIZES -->
            <x:Double x:Key="IconSizeSmall">14</x:Double>
            <x:Double x:Key="IconSizeDefault">16</x:Double>
            <x:Double x:Key="IconSizeMedium">20</x:Double>

            <!-- OPACITY LEVELS -->
            <x:Double x:Key="OpacityDisabled">0.3</x:Double>
            <x:Double x:Key="OpacitySubtle">0.6</x:Double>
            <x:Double x:Key="OpacityFull">1.0</x:Double>

            <!-- BORDER RADIUS -->
            <CornerRadius x:Key="RadiusSmall">4</CornerRadius>
            <CornerRadius x:Key="RadiusMedium">8</CornerRadius>
        </ResourceDictionary>
    </Application.Resources>

    <!-- Field label style defined after resources so it can reference FontSizeBody -->
    <Application.Styles>
        <Style Selector="TextBlock.FieldLabel">
            <Setter Property="FontSize" Value="{DynamicResource FontSizeBody}" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </Application.Styles>

</Application>
